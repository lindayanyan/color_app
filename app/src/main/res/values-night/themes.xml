<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--currently just copied over day theme, need to actually make a night theme-->
    <style name="Theme.ColorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/design_default_color_primary_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cardview_light_background</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ColorApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ColorApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ColorApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>